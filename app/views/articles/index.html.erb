<%= link_to "New Article", new_article_path , class: "btn btn-default btn-lg", id: "new_article_btn" %>

<% @articles.each do |article| %>
	<div style="padding: 1.3rem;">
		<div class="card">
		  <div class="card-header">
		    <%= link_to article.title, article_path(article) %>
		  </div>
		  <div class="card-body">
		    <h5 class="card-title"><%= truncate(article.body, length: 500) %></h5>
		    <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
		  </div>
		</div>
	</div>
<% end %> 