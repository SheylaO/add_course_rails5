<article class="detail-article">

<div class="card text-white bg-info mb-3" >
  <div class="card-header">
  	 <h1 class="article-detail-title"><%= @article.title %></h1>
  </div>

  <div class="card-body">
    	<h5 class="card-title">
    		<div class="article-body"><%= @article.body %></div>
		</h5>
    	<p class="card-text">
    		<div class="fa fa-calendar" id="article-date">
			<%= @article.created_at.strftime("%b %d %Y") %>
			</div>
		</p>
  </div>
</div>


<button type="button" class="btn btn-light"><%= link_to "Edit Article", edit_article_path(@article)%></button>


<button type="button" class="btn btn-light"><%= link_to "Delete Article", article_path(@article), method: :delete, 
  data: { confirm: "Are you sure you want to delete article?"} %></button>

</article>




